{
	"name": "colorfa11y",
	"description": "A simple web utility to easily convert between HEX, RGB, and HSL colors and determine WCAG color contrast ratio",
	"version": "0.3.0",
	"author": "David Evans",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"cy:run": "cypress run",
		"cy:open": "cypress open",
		"test": "jest",
		"test:watch": "npm run test -- --watch",
		"coverage": "npm run test -- --coverage",
		"format": "prettier --write --plugin-search-dir=. ./**/*.{js,ts,json,html,svelte,md}",
		"svelte-check": "svelte-check",
		"lint": "prettier --check . && eslint --ignore-path .gitignore . && npm run svelte-check",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint"
		],
		"*.{js,ts,json,svelte,md}": [
			"prettier --write --plugin-search-dir=."
		]
	},
	"devDependencies": {
		"@babel/preset-env": "^7.13.12",
		"@sveltejs/adapter-netlify": "next",
		"@sveltejs/adapter-node": "next",
		"@sveltejs/kit": "next",
		"@testing-library/cypress": "^7.0.5",
		"@testing-library/jest-dom": "^5.11.10",
		"@testing-library/svelte": "^3.0.3",
		"@testing-library/user-event": "^13.1.9",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"babel-jest": "^26.6.3",
		"cypress": "^7.0.0",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-cypress": "^2.11.3",
		"eslint-plugin-jest": "^24.4.0",
		"eslint-plugin-jest-dom": "^3.9.0",
		"eslint-plugin-svelte3": "^3.1.0",
		"eslint-plugin-testing-library": "^4.12.0",
		"husky": "^7.0.2",
		"jest": "^26.6.3",
		"lint-staged": "^11.1.2",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"sass": "^1.0.0",
		"svelte": "^3.49.0",
		"svelte-check": "^1.4.0",
		"svelte-htm": "^1.1.1",
		"svelte-jester": "^1.7.0",
		"svelte-preprocess": "^4.0.0",
		"ts-jest": "^26.5.4",
		"tslib": "^2.0.0",
		"typescript": "^4.0.0",
		"vite": "^2.1.0"
	},
	"type": "module"
}
