{
	"name": "colorfa11y",
	"description": "A simple web utility to easily convert between HEX, RGB, and HSL colors and determine WCAG color contrast ratio",
	"version": "0.2.0",
	"author": "David Evans",
	"scripts": {
		"dev": "sapper dev",
		"build": "sapper build --legacy",
		"export": "sapper export --legacy",
		"start": "node __sapper__/build",
		"cy:run": "cypress run",
		"cy:open": "cypress open",
		"test": "jest",
		"test:watch": "npm run test -- --watch",
		"coverage": "npm run test -- --coverage",
		"format": "prettier --write --plugin-search-dir=. ./**/*.{js,ts,json,html,svelte,md}",
		"svelte-check": "svelte-check",
		"lint": "eslint --ext .js,.ts src/ && npm run svelte-check"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && npm run svelte-check",
			"pre-push": "npm run lint"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint"
		],
		"*.{js,ts,json,svelte,md}": [
			"prettier --write --plugin-search-dir=.",
			"git add"
		]
	},
	"dependencies": {
		"compression": "^1.7.1",
		"polka": "next",
		"sirv": "^1.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.0.0",
		"@babel/plugin-syntax-dynamic-import": "^7.0.0",
		"@babel/plugin-transform-runtime": "^7.0.0",
		"@babel/preset-env": "^7.0.0",
		"@babel/runtime": "^7.0.0",
		"@rollup/plugin-babel": "^5.0.0",
		"@rollup/plugin-commonjs": "^14.0.0",
		"@rollup/plugin-node-resolve": "^8.0.0",
		"@rollup/plugin-replace": "^2.2.0",
		"@rollup/plugin-typescript": "^5.0.2",
		"@testing-library/cypress": "^6.0.1",
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/svelte": "^3.0.0",
		"@tsconfig/svelte": "^1.0.10",
		"@typescript-eslint/eslint-plugin": "^4.0.1",
		"@typescript-eslint/parser": "^4.0.1",
		"babel-jest": "^26.3.0",
		"cypress": "^5.1.0",
		"eslint": "^7.8.1",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-cypress": "^2.11.1",
		"eslint-plugin-jest": "^23.20.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.2.5",
		"jest": "^26.4.2",
		"lint-staged": "^10.3.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.1",
		"prettier-plugin-svelte": "^1.2.0",
		"rollup": "^2.3.4",
		"rollup-plugin-svelte": "^6.0.0",
		"rollup-plugin-svelte-svg": "^0.2.3",
		"rollup-plugin-terser": "^7.0.0",
		"sapper": "^0.28.0",
		"svelte": "^3.17.3",
		"svelte-check": "^1.0.34",
		"svelte-htm": "^1.1.1",
		"svelte-jester": "^1.1.5",
		"svelte-preprocess": "^4.2.1",
		"ts-jest": "^26.3.0",
		"typescript": "^4.0.2"
	}
}
