{
	"name": "colorfa11y",
	"description": "A simple web utility to easily convert between HEX, RGB, and HSL colors and determine WCAG color contrast ratio",
	"version": "0.3.0",
	"author": "David Evans",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"cy:run": "cypress run",
		"cy:open": "cypress open",
		"test": "jest",
		"test:watch": "npm run test -- --watch",
		"coverage": "npm run test -- --coverage",
		"format": "prettier --write --plugin-search-dir=. ./**/*.{js,ts,json,html,svelte,md}",
		"svelte-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "prettier --check . && eslint --ignore-path .gitignore . && npm run svelte-check",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint"
		],
		"*.{js,ts,json,svelte,md}": [
			"prettier --write --plugin-search-dir=."
		]
	},
	"devDependencies": {
		"@babel/preset-env": "^7.19.3",
		"@sveltejs/adapter-netlify": "^1.0.0-next.78",
		"@sveltejs/adapter-node": "^1.0.0-next.96",
		"@sveltejs/kit": "^1.0.0-next.507",
		"@testing-library/cypress": "^8.0.3",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.1",
		"@testing-library/user-event": "^14.4.3",
		"@tsconfig/svelte": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"@typescript-eslint/parser": "^5.38.1",
		"babel-jest": "^26.6.3",
		"cypress": "^10.9.0",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-cypress": "^2.12.1",
		"eslint-plugin-jest": "^27.0.4",
		"eslint-plugin-jest-dom": "^4.0.2",
		"eslint-plugin-svelte3": "^4.0.0",
		"eslint-plugin-testing-library": "^5.7.0",
		"husky": "^8.0.1",
		"jest": "^26.6.3",
		"lint-staged": "^13.0.3",
		"netlify-plugin-cypress": "^2.2.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.2.0",
		"sass": "^1.55.0",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.1",
		"svelte-htm": "^1.1.1",
		"svelte-jester": "^1.7.0",
		"svelte-preprocess": "^4.10.7",
		"ts-jest": "^26.5.4",
		"tslib": "^2.4.0",
		"typescript": "^4.8.4",
		"vite": "^3.1.4"
	},
	"type": "module"
}
